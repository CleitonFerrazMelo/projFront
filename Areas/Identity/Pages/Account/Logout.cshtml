@page
@model LogoutModel
@{
    ViewData["Title"] = "Sair";
}

<header class="text-center">
    
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="container">
                <div class="container col-xl-10 col-xxl-8 px-4 py-5">
                    <div class="row align-items-center g-lg-5 py-5">
                        <div class="alert alert-primary" role="alert">
                           Você está saindo da sua sessão de trabalho !
                        </div>
                <form class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/Identity/Account/Login" method="post">
                            <button type="submit" class="btn btn-dark">Sair</button>
                
                </form>
                    </div>
                </div>
            </div>
            
        }
        else
        {
            <p>Você teve sucesso ao sair da aplicação.</p>
        }
    }
</header>
