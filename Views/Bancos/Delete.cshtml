<h3>Deseja Realmente Deletar ?</h3>
<div>
    
    <hr />
    <dl class="row col-md-10">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Agencia)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Agencia)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.TipoConta)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.TipoConta)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.NumeroConta)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.NumeroConta)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.PixChave)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.PixChave)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.PixNumero)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.PixNumero)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-warning">Voltar</a>
    </form>
</div>
