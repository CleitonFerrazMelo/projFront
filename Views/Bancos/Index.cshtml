@model IEnumerable<projFront.ViewModels.BancoViewModel>

@{
    ViewData["Title"] = "Cadastro de Bancos";
    var usuarioLogado = @ViewData["usuarioLogado"];
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
        max-width: 1000px; /* Limite máximo de largura */

        margin: 20px;
        padding-left: 20px;
        padding-right: 20px;
    }

        .page-header h1 {
            flex-shrink: 0; /* Evitar que o título se mova */
            margin: 0; /* Remover margem padrão */
        }

    .btn-container {
        display: flex;
        gap: 10px; /* Espaçamento entre os botões */
    }

        .btn-container a {
            margin-left: 10px;
        }


</style>


<div class="page-header">
    <h1>Bancos</h1>
    <div class="btn-container">
        <a asp-action="Create" class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-responsive-sm">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Agencia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoConta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroConta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PixChave)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PixNumero)
                            </th>
            
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdBanco"> <img alt="Editar" class="icones_buttons_index" src="/images/pencil.svg" />  </a>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.IdBanco"><img alt="Detalhes" class="icones_buttons_index" src="/images/details.png" /></a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.IdBanco"><img alt="Deletar" class="icones_buttons_index" src="/images/delete.png" /></a>
                                </td>
                
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Agencia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoConta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumeroConta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PixChave)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PixNumero)
                            </td>
            
                        </tr>
                }
                    </tbody>
                </table>
            </div>
         </div>
      </div>
   </div>
