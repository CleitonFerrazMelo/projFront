@model IEnumerable<projFront.ViewModels.EmpresaViewModel>

@{
    ViewData["Title"] = "Cadastro de Empresas";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
        max-width: 1000px; /* Limite máximo de largura */

        margin: 20px;
        padding-left: 20px;
        padding-right: 20px;
    }

        .page-header h1 {
            flex-shrink: 0; /* Evitar que o título se mova */
            margin: 0; /* Remover margem padrão */
        }

    .btn-container {
        display: flex;
        gap: 10px; /* Espaçamento entre os botões */
    }

        .btn-container a {
            margin-left: 10px;
        }

    table th, table td {
        width: auto; /* Permitir redimensionamento */
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

        .custom-table thead {
            background-color: #007bff;
            color: white;
        }

        .custom-table th,
        .custom-table td {
            padding: 10px;
            border: 1px solid #ddd;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .custom-table th {
            cursor: pointer;
            user-select: none;
        }

            .custom-table th:hover {
                background-color: #0056b3;
            }

            /* Ajuste de Largura das Colunas */
            .custom-table th.resizable {
                position: relative;
            }

                .custom-table th.resizable::after {
                    content: "";
                    position: absolute;
                    right: 0;
                    top: 0;
                    width: 5px;
                    height: 100%;
                    cursor: ew-resize;
                }
</style>

<div class="page-header">
    <h1>Empresas</h1>
    <div class="btn-container">
        <a asp-action="Create" class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<table class="table table-bordered table-responsive-sm custom-table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaturaSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaturaUltimoNumero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MensagemFisco)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdEmpresa"> <img alt="Editar" class="icones_buttons_index" src="/images/pencil.svg" />  </a>
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.IdEmpresa"><img alt="Detalhes" class="icones_buttons_index" src="/images/details.png" /></a>
            </td>
            <td>
                    <a asp-action="Delete" asp-route-id="@item.IdEmpresa"><img alt="Deletar" class="icones_buttons_index" src="/images/delete.png" /></a>
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEmpresa)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaturaSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaturaUltimoNumero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MensagemFisco)
            </td>
            
        </tr>
}
    </tbody>
</table>
